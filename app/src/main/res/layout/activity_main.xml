<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/zdjeciee"
        android:id="@+id/zdjecie"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edycja zdjecia"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_below="@id/zdjecie"
        android:id="@+id/tv1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przezroczystosc"
        android:textSize="20dp"
        android:id="@+id/tv2"
        android:layout_marginLeft="20sp"
         android:layout_below="@+id/tv1"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:id="@+id/seek1"
        android:max="200"
        android:min="1"
        android:progress="1"
        android:layout_below="@id/tv2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skalowanie:"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:id="@+id/tv3"
        android:layout_below="@id/seek1"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/Seek2"
        android:max="255"
        android:progress="255"
        android:layout_below="@id/tv3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotacja:"
        android:textSize="20dp"
        android:id="@+id/tv4"
        android:layout_marginLeft="20sp"
        android:layout_below="@id/Seek2"
       />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/Seek3"
        android:max="360"
        android:layout_below="@id/tv4"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kolor:"
        android:textSize="20dp"
        android:id="@+id/tv5"
        android:layout_marginLeft="20sp"
        android:layout_below="@id/Seek3"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/Seek4"
        android:max="255"
        android:progress="255"
        android:layout_below="@id/tv5"

        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/Seek5"
        android:max="255"
        android:progress="255"
        android:layout_below="@id/Seek4"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/Seek6"
        android:max="255"
        android:progress="255"
        android:layout_below="@+id/Seek5"
        />



</RelativeLayout>